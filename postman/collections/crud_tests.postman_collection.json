{
  "info": {
    "name": "CRUD Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Users",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/users?page=2",
          "host": ["{{baseUrl}}"],
          "path": ["api", "users"],
          "query": [
            {
              "key": "page",
              "value": "2"
            }
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"Users returned\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.data.length).to.be.above(0);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Create User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "x-api-key",
            "value": "reqres-free-v1",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"{{name}}\",\n  \"job\": \"{{job}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/users",
          "host": ["{{baseUrl}}"],
          "path": ["api", "users"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"User created\", function () {",
              "    pm.expect(pm.response.code).to.equal(201);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Update User",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "x-api-key",
            "value": "reqres-free-v1",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"morpheus\",\n  \"job\": \"zion resident\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/users/2",
          "host": ["{{baseUrl}}"],
          "path": ["api", "users", "2"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"User updated\", function () {",
              "    pm.expect(pm.response.code).to.equal(200);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Delete User",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "x-api-key",
            "value": "reqres-free-v1",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/users/2",
          "host": ["{{baseUrl}}"],
          "path": ["api", "users", "2"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"User deleted\", function () {",
              "    pm.expect(pm.response.code).to.equal(204);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}
